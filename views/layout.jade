doctype html
html(lang=i18n.lng())
  head
    meta(http-equiv="content-type", content="text/html; charset=UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= title
    != css("application")
    block meta
  body
    div(id="container", data-ng-app="arbolista")
      div(id="content")
        nav(class="navbar navbar-default", style="margin-bottom:0px;")
          div(class="container")
            div(class="navbar-header")
              button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                span(class="sr-only") Toggle navigation
                span(class="icon-bar")
                span(class="icon-bar")
                span(class="icon-bar")
              a(class="navbar-brand", href="/"+i18n.lng())
                img(id="arb_logo", src="/images/logo300.png")
                = " arbolista"
            div(id="navbar", class="collapse navbar-collapse")
              ul(class="nav navbar-nav navbar-right")
                li
                  a(href="/"+i18n.lng()+"/"+i18n.t("routes.hire_us"))= i18n.t("views.layout.hire_us")
                li
                  a(href="/"+i18n.lng()+"/"+i18n.t("routes.work_with_us"))= i18n.t("views.layout.work_with_us")
                li(class="dropdown arb-languages")
                  a(href="#", class="dropdown-toggle", data-toggle="dropdown", role="button", aria-expanded="false")
                    = i18n.t("views.layout.language")
                    span(class="caret")
                  ul(class="dropdown-menu", role="menu")
                    li
                      a(href="/en/" + i18n.t("routes."+current_page, {lng: "en"}), class: klass) English
                    li
                      a(href="/es/" + i18n.t("routes."+current_page, {lng: "es"}), class: klass) Espa√±ol
        block content
        != js("application")
        block scripts
      div(id="footer")
        div(class="container")
          arb-email(attrs="email_attrs")
