doctype html
html
	head
		meta(http-equiv="content-type", content="text/html; charset=UTF-8")
		title= title
		!= css("application")
		!= js("application")
	body
		nav(class="navbar navbar-default", style="margin-bottom:0px;")
			div(class="container-fluid")
				div(class="navbar-header")
					a(class="navbar-brand", href="/"+i18n.lng()) arbolista
				div(class="collapse navbar-collapse", id="bs-example-navbar-collapse-1")
					ul(class="nav navbar-nav navbar-right")
							li
								a(href=i18n.t("routes.hire_us"))= i18n.t("views.layout.hire_us")
							li
								a(href=i18n.t("routes.work_with_us"))= i18n.t("views.layout.work_with_us")
							li(class="dropdown arb-languages")
								a(href="#", class="dropdown-toggle", data-toggle="dropdown", role="button", aria-expanded="false")
									= i18n.t("views.layout.language")
									span(class="caret")
								ul(class="dropdown-menu", role="menu")
										li
											a(href="/en/" + i18n.t("routes."+current_page, {lng: "en"}), class: klass) English
										li
											a(href="/es/" + i18n.t("routes."+current_page, {lng: "es"}), class: klass) Español
										li
											a(href="/pt/" + i18n.t("routes."+current_page, {lng: "pt"}), class: klass) Português
		block content
		block scripts